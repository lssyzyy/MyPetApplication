<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beautiful_linearlayout_border">

        <Button
            android:id="@+id/pet_baike_detail_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/leftback" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pet_baike_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物百科详情"
                android:textColor="#000000"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/pet_baike_detail_engname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物英文名"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pet_baike_detail_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="性格特点："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_characters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="性格特点"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="祖籍："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_nation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="祖籍"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="易患病："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_easyOfDisease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="易患病"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="寿命："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="寿命"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="价格："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="体态特征："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_feature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="体态特征"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="特点："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_characterFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="特点"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="照顾须知："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_careKnowledge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="照顾须知"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="喂养注意："
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/pet_baike_detail_feedPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="喂养注意"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>